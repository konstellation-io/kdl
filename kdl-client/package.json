{
  "name": "kdl-client",
  "version": "0.1.0",
  "author": {
    "name": "Konstellation Team",
    "email": "konstellation-team@intelygenz.com",
    "url": "https://intelygenz.com"
  },
  "repository": "https://github.com/konstellation-io/kdl",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.5",
    "kwc": "^1.1.0",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "typeface-montserrat": "^1.1.13",
    "typeface-roboto-mono": "^1.1.13"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^5.3.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "semantic-release": "^17.1.2",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "org.konstellation.KdlClient",
    "productName": "Konstellation Development Lab Client",
    "copyright": "Copyright Â© 2020 Konstellation",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron/main.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development",
      "publish": [
        "github"
      ]
    }
  },
  "homepage": "./",
  "main": "electron/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "yarn build-dev && yarn build-app",
    "build-app": "rescripts build && cp electron/electron.js build",
    "build-dev": "tsc",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"yarn build-dev\" \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build -l",
    "prerelease": "yarn build",
    "release": "electron-builder build -l --publish always -c electron-builder.yml"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.2%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
