{
  "name": "konstellation-dev-lab",
  "description": "Konstellation Development Lab desktop application",
  "version": "1.19.0",
  "author": {
    "name": "Konstellation Team",
    "email": "konstellation-team@intelygenz.com",
    "url": "https://intelygenz.com"
  },
  "repository": "https://github.com/konstellation-io/kdl",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.2.5",
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "@types/classnames": "2.2.10",
    "@types/jest": "26.0.19",
    "@types/node": "14.11.5",
    "@types/react": "16.9.51",
    "@types/react-dom": "16.9.8",
    "chart.js": "^2.9.4",
    "classnames": "2.2.6",
    "custom-electron-titlebar": "3.2.4",
    "d3-color": "^2.0.0",
    "d3-format": "^2.0.0",
    "electron-is-dev": "1.2.0",
    "electron-store": "6.0.1",
    "electron-updater": "4.3.5",
    "graphql": "^15.3.0",
    "graphql.macro": "github:mgs95/graphql.macro#build",
    "kwc": "1.5.1",
    "lodash": "4.17.20",
    "moment-timezone": "^0.5.32",
    "node-sass": "4.14.1",
    "react": "16.13.1",
    "react-animate-height": "2.0.23",
    "react-dom": "16.13.1",
    "react-gravatar": "^2.6.3",
    "react-hook-form": "6.9.4",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "react-table": "7.2.2",
    "react-tabs": "3.1.1",
    "react-toastify": "6.0.9",
    "react-transition-group": "4.4.1",
    "typeface-montserrat": "1.1.13",
    "typeface-roboto-mono": "1.1.13",
    "uuid": "8.3.1"
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.14",
    "@rescripts/rescript-env": "0.0.12",
    "@semantic-release/git": "9.0.0",
    "@types/chart.js": "^2.9.28",
    "@types/d3-color": "^2.0.1",
    "@types/d3-format": "^2.0.0",
    "@types/enzyme": "3.10.8",
    "@types/lodash": "4.14.162",
    "@types/moment-timezone": "^0.5.30",
    "@types/react-gravatar": "^2.6.8",
    "@types/react-router-dom": "5.1.6",
    "@types/react-table": "7.0.19",
    "@types/react-tabs": "2.3.2",
    "@types/react-transition-group": "4.4.0",
    "@types/uuid": "8.3.0",
    "concurrently": "5.3.0",
    "electron": "10.1.3",
    "electron-builder": "22.8.1",
    "electron-devtools-installer": "3.1.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "enzyme-to-json": "3.6.1",
    "husky": "4.3.0",
    "jest-canvas-mock": "2.3.0",
    "lint-staged": "10.4.0",
    "mutationobserver-shim": "0.3.7",
    "prettier": "2.1.2",
    "semantic-release": "17.2.3",
    "typescript": "3.9.7",
    "wait-on": "5.2.0"
  },
  "build": {
    "appId": "org.konstellation.KdlClient",
    "extends": null,
    "productName": "KDL",
    "copyright": "Copyright Â© 2020 Konstellation",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "snap"
      ],
      "maintainer": "Intelygenz",
      "executableName": "konstellation-dev-lab",
      "icon": "build/icons/512x512.png"
    },
    "snap": {
      "confinement": "devmode"
    },
    "win": {
      "icon": "build/icons/512x512.png",
      "target": "NSIS",
      "publisherName": "Konstellation IO"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "build/icons/512x512.png",
      "shortcutName": "KDL"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "darkModeSupport": false,
      "icon": "build/icons/512x512.png",
      "type": "development"
    },
    "dmg": {
      "icon": "build/icons/512x512.png",
      "title": "Konstellation Dev Lab"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "!src/index.tsx",
      "!Graphql/client/**/*.ts",
      "!Graphql/mutations/**/*.ts",
      "!Graphql/queries/**/*.ts",
      "!Graphql/types/**/*.ts",
      "!src/Pages/Server/apollo/models/**/*.ts",
      "!types/**/*.ts",
      "!browserHistory.ts",
      "!react-app-env.d.ts"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "homepage": "./",
  "main": "build/electron/main.js",
  "scripts": {
    "start": "rescripts start",
    "build": "yarn build-dev && yarn build-app && yarn build-electron",
    "build-app": "rescripts build",
    "build-dev": "tsc",
    "build-electron": "cd electron && tsc && cd ..",
    "test": "rescripts test",
    "test:cov": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "dev": "SASS_PATH=src concurrently \"yarn build-electron\" \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "prelocal-release": "yarn build",
    "local-release": "electron-builder build -w -p never",
    "prettier": "prettier --write --single-quote \"src/**/*.ts\"",
    "gen:types": "apollo client:codegen types --globalTypesFile=src/Graphql/types/globalTypes.ts --target typescript --includes=./src/Graphql/**/*.graphql --localSchemaFile=./graphql/schema.graphql && yarn prettier"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.2%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "package.json version updated!"
        }
      ]
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
